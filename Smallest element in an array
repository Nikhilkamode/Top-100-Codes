#let's solve using cpp
#include<bits.h>
using namespace std;
the smallest element(intn,intarr[])
{
if(n==1)
return arr[0];
return min(arr[n-1],smallest element(n-1,arr));
}

//driver code
int main()
{
int arr[]={10,20,30,40}
int n=sizeof(arr)/(sizeof[0]);
cout<<"smallest element is:"<<smallest element(n.arr);
}
























