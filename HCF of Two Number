#include<iostream.h>
using namespace std;
int main
{
int num1=36,int num2=60,hcf=1;
for(i=1;i<=num1||i<=num2;i++)
  {
if(num1%i==0&num2%i==0)
hcf=i;
 }
cout<<"hcf is:"<<num1;
cout<<"hcf is:"<<num2;
return 0;
}

Method2: Using While loop

#include<iostream>
using namespace std;

int main()
{
    int num1 = 36, num2 = 60;
    int a = num1, b = num2;

    while (num1 != num2)
    {
        if (num1 > num2)
            num1 -= num2;
        else
            num2 -= num1;
    }

    cout<<"HCF of "<<a<<" and "<<b<<" is "<<num1;

    return 0;
}
