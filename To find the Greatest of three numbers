Cin>>n2;
Cout<<"Please Enter Third no"
Cin>>n3;
if(n1>=n2)&&(n1>=n3)
Cout<<"n1 is greatest"
elseif(n2>=n3)&&(n2>=n1)
Cout<<"n2 is greatest"
else
cout<,"n3 is greatest"
